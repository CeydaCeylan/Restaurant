@model LoginViewsModel

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="authincation h-100">
    <div class="container h-100">
        <div class="row justify-content-center h-100 align-items-center">
            <div class="col-md-6">
                <div class="authincation-content">
                    <div class="row no-gutters">
                        <div class="col-xl-12">
                            <div class="auth-form">
                                <div class="text-center mb-3">
                                    <a href="index-2.html"><img src="/admin/images/logo-full.png" alt=""></a>
                                </div>
                                <h4 class="text-center mb-4">Hoş Geldiniz!</h4>
                                <form method="post">
                                 <div asp-validation-summary="All" class="text-danger">
                                    <div class="mb-3">
                                        <label class="mb-1"><strong>E-posta</strong></label>
                                            <input asp-for="Email" type=" email" class="form-control" placeholder="merhaba@example.com">
                                    </div>
                                    <div class="mb-3">
                                        <label class="mb-1"><strong>Parola</strong></label>
                                        <input asp-for="Password" type="password" class="form-control">
                                    </div>
                                    <div class="row d-flex justify-content-between mt-4 mb-2">
                                        <div class="mb-3">
                                            <div class="form-check custom-checkbox ms-1">
                                                    <input asp-for="RememberMe" type="checkbox" class="form-check-input" id="basic_checkbox_1">
                                                <label class="form-check-label" for="basic_checkbox_1">Beni Hatırla</label>
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <a href="page-forgot-password.html">Şifrenizi Mi Unuttunuz?</a>
                                        </div>
                                    </div>
                                    <div class="text-center">
                                        <button type="submit" class="btn btn-primary btn-block">Oturumu Aç</button>
                                    </div>
                                    </div>
                                </form>
                                <div class="new-account mt-3">
                                    <p>Hesabınız Yok Mu? <a class="text-primary" href="page-register.html">Kaydol</a></p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>