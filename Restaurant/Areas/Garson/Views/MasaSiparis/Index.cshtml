@model IEnumerable<MasaSiparis>

<div class="content-body">
    <div class="container-fluid">
        <h1 class="text-center mb-4">Masa Sipariş Listesi</h1>
        <div class="col-12">
            <div class="row">
                @foreach (var masaSiparis in Model)
                {
                    <div class="col-md-3">
                        <form method="post" action="@Url.Action("MutfakSiparisOnayla", "MasaSiparis", new { id = masaSiparis.Siparis.Id })">
                            <div class="card mb-3">
                                <div class="card-header bg-primary">
                                    <p class="card-text text-white mx-auto"><strong>@masaSiparis.Masa?.Kod</strong></p>
                                </div>
                                <div class="card-body text-center">
                                    <p class="card-text"><strong>Sipariş Detayları:</strong></p>
                                    <ul>
                                        @foreach (var siparisMenu in masaSiparis.Siparis.SiparisMenuler)
                                        {
                                            <li>Sipariş Adı: @siparisMenu.Menu.Ad - Adet: @siparisMenu.Miktar</li>
                                        }
                                        @foreach (var siparisUrun in masaSiparis.Siparis.SiparisUrunler)
                                        {
                                            <li>Sipariş Adı: @siparisUrun.Urun.Ad - Adet: @siparisUrun.Miktar</li>
                                        }
                                        }
                                    </ul>
                                    <p class="card-text"><strong>Toplam Tutar: </strong> @masaSiparis.Tutar₺</p>
                                    <button type="button" class="btn btn-danger btn-sm">
                                        İptal Et <span class="btn-icon-end"><i class="fas fa-times"></i></span>
                                    </button>
                                    <button type="submit" class="btn btn-success btn-sm btn-onayla">
                                        Onayla <span class="btn-icon-end">
                                            <i class="fa fa-check"></i>
                                        </span>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('.btn-onayla').click(function () {
                Swal.fire({
                    title: "İşlem Başarılı!",
                    text: "Sipariş onaylandı!",
                    icon: "success"
                });
            });
        });
    </script>
}
