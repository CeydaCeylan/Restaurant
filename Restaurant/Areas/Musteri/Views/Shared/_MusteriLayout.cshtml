    <script>
        $('.sepeteekle').click(function () {
            var deger = $(this).closest('div').find('#menuid').val();
            var adet = $(this).closest('div').find('#sepetadet').val();

            var degeri = $(this).closest('div').find('#urunid').val();  

            if (adet === null || adet === undefined || isNaN(adet) || adet <= 0 || adet === '') {
                Swal.fire({
                    icon: 'error',
                    title: 'Hata!',
                    text: 'Adet bilgisi geçersiz.'
                });
                return;
            }

            adet = parseInt(adet);
            if (deger !== undefined) {
                $.ajax({
                    url: '@Url.Action("MenuSepet", "Sepet")',
                    type: 'GET',
                    data: { id: deger },
                    success: function (menu) {
                        var sepetverisi = localStorage.getItem('Sepet');

                        try {
                            sepetverisi = JSON.parse(sepetverisi);
                        } catch (error) {
                            sepetverisi = [];
                        }

                        var sepetArray = Array.isArray(sepetverisi) ? sepetverisi : [];

                        var ayniMenuVarMi = sepetArray.some(function (item) {
                            return item.id === menu.id;
                        });

                        if (ayniMenuVarMi) {
                            sepetArray = sepetArray.map(function (item) {
                                if (item.id === menu.id) {
                                    item.adet = parseInt(item.adet) + adet;
                                }
                                return item;
                            });
                        } else {
                            menu.adet = adet;                         
                            sepetArray.push(menu);                          
                        }

                        localStorage.setItem('Sepet', JSON.stringify(sepetArray));

                        Swal.fire({
                            icon: 'success',
                            title: 'Başarılı!',
                            text: 'Menü başarıyla sepete eklendi.'
                        });
                        sepetsayisigetir()
                    },
                    error: function (xhr, status, error) {
                        alert('Hata oluştu: ' + error);
                    }
                });
            } else if (degeri !== undefined) {
                $.ajax({
                    url: '@Url.Action("UrunSepet", "Sepet")',
                    type: 'GET',
                    data: { id: degeri },
                    success: function (urun) {
                        var sepetverisi = localStorage.getItem('Sepet');

                        try {
                            sepetverisi = JSON.parse(sepetverisi);
                        } catch (error) {
                            sepetverisi = [];
                        }

                        var sepetArray = Array.isArray(sepetverisi) ? sepetverisi : [];

                        var ayniUrunVarMi = sepetArray.some(function (item) {
                            return item.id === urun.id;
                        });

                        if (ayniUrunVarMi) {
                            sepetArray = sepetArray.map(function (item) {
                                if (item.id === urun.id) {
                                    item.adet = parseInt(item.adet) + adet;
                                }
                                return item;
                            });
                        } else {
                            urun.adet = adet;
                            sepetArray.push(urun);
                        }

                        localStorage.setItem('Sepet', JSON.stringify(sepetArray));

                        Swal.fire({
                            icon: 'success',
                            title: 'Başarılı!',
                            text: 'Ürün başarıyla sepete eklendi.'
                        });
                        sepetsayisigetir()
                    },

                    error: function (xhr, status, error) {
                        alert('Hata oluştu: ' + error);
                    }
                });
            }
        });
        sepetsayisigetir()
        function sepetsayisigetir(){
            var localsayi = localStorage.getItem("Sepet"); 
            var sepetDizisi = JSON.parse(localsayi); 
            if (sepetDizisi !== null) {
                var siparissayisi = sepetDizisi.length;

                if (siparissayisi > 0) {
                    $('#sepetsayisi').text(siparissayisi);
                    $('#sepetsayisi').show();
                }
            }
            else {
                $('#sepetsayisi').hide();
            }          
        }
    </script>
