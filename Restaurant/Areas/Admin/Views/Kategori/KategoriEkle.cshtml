@model Kategori

<head>
    <link href="~/admin/vendor/select2/css/select2.min.css" rel="stylesheet" />
    <link href="~/admin/vendor/jquery-nice-select/css/nice-select.css" rel="stylesheet">
    <link href="/admin/css/style.css" rel="stylesheet">

</head>
<div class="content-body">
    <div class="container-fluid">
        <div class="row">
            <form asp-action="KategoriEkle" asp-controller="Kategori" method="post" novalidate>
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">KATEGORİ EKLE</h4>
                        </div>
                        <div class="card-body">
                            <div class="form-validation">
                                <div class="row">
                                    <div class="col-xl-6">
                                        <div class="mb-3 ">
                                            <label class="text-label form-label " style="color:black;">Ad</label>
                                            <input asp-for="Ad" class="form-control border border-dark" type="text">
                                            <span asp-validation-for="Ad" class="text-danger"></span>
                                        </div>                                       
                                    </div>
                                    <div class="col-xl-6">
                                        <div class="mb-3 mt-2">
                                            <label class="text-label form-label" style="color:black;">Tür</label>
                                            <select asp-for="Tur" class="form-control border border-dark" id="single-select">
                                                <option value="">Tür Seçiniz</option>
                                                <option value="Menü">Menü</option>
                                                <option value="Masa">Masa</option>
                                                <option value="Ürün">Ürün</option>
                                            </select>
                                        </div>
                                        <span asp-validation-for="Tur" class="text-danger"></span>

                                    </div>
                                    <div class="d-flex justify-content-center mt-5">
                                        <button type="submit" class="btn me-2 btn-primary">Kayıt Ekle</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/admin/vendor/jquery-nice-select/js/jquery.nice-select.min.js"></script>
    <script src="~/admin/vendor/select2/js/select2.full.min.js"></script>
    <script src="~/admin/js/plugins-init/select2-init.js"></script>
}               