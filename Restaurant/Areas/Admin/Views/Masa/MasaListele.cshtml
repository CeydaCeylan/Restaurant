@model IEnumerable<Masa>


<div class="content-body">
    <div class="container-fluid">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">MASA LİSTESİ</h4>
                    <a asp-controller="Masa" asp-action="MasaEkle" asp-route-id="0" class="btn btn-primary btn-rounded me-3 mb-2"><i class="fa-sharp fa-solid fa-box"></i> Masa Ekle</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="example3" class="display" style="min-width: 845px">
                            <thead>
                                <tr>
                                    <th class="text-center">ID</th>
                                    <th class="text-center">Kod</th>
                                    <th class="text-center">Kategori</th>
                                    <th class="text-center">Kapasite</th>
                                    <th class="text-center">İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var masa in Model)
                                {
                                    <tr>
                                        <td class="text-center">@masa.Id</td>
                                        <td class="text-center">@masa.Kod</td>
                                        <td class="text-center">@masa.Kategori?.Ad</td>
                                        <td class="text-center">@masa.Kapasite</td>
                                        <td class="text-center">
                                            <div class="d-end">
                                                <a asp-action="MasaEkle" asp-route-id="@masa.Id" class="btn btn-success shadow btn-s sharp me-1"><i class="fas fa-pencil-alt"></i></a>
                                                <a asp-route-id="@masa.Id" asp-controller="Masa" asp-action="Sil" asp-area="admin" class="btn btn-danger shadow btn-s sharp"><i class="fa fa-trash"></i></a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

