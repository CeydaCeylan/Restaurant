@model IEnumerable<Rol>


<div class="content-body">
    <div class="container-fluid">

        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">ROL LİSTESİ</h4>
                    <a asp-controller="Personel" asp-action="RolEkle" asp-route-id="0" class="btn btn-primary btn-rounded me-3 mb-2"><i class="fas fa-user-friends me-2"></i>+ Rol Ekle</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-responsive-sm">
                            <thead>
                                <tr>
                                    <th class="text-center">ID</th>
                                    <th class="text-center">Rol Ad</th>
                                    <th class="text-center">İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var rols in Model)
                                {
                                    <tr>
                                        <td class="text-center">@rols.Id</td>
                                        <td class="text-center">@rols.Ad</td>
                                        <td class="text-center">
                                            <div class="d-end">
                                                <a asp-action="RolEkle" asp-route-id="@rols.Id" class="btn btn-primary shadow btn-xs sharp me-1"><i class="fas fa-pencil-alt"></i></a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
