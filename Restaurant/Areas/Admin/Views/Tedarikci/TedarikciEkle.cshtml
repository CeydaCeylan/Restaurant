@model Tedarikci

<head>
    <link href="~/admin/vendor/select2/css/select2.min.css" rel="stylesheet" />
    <link href="~/admin/vendor/jquery-nice-select/css/nice-select.css" rel="stylesheet">

</head>
<div class="content-body">
    <div class="container-fluid">
        <div class="row">
            <form asp-action="TedarikciEkle" asp-controller="Tedarikci" method="post" novalidate>
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">TEDARİKÇİ EKLE</h4>
                        </div>
                        <div class="card-body">
                            <div class="form-validation">
                                <div class="row">
                                    <div class="col-xl-6">
                                        <div class="mb-3 ">
                                            <label class="text-label form-label " style="color:black;">Firma Adı</label>
                                            <input asp-for="Firma" class="form-control border border-dark" type="text">
                                            <span asp-validation-for="Firma" class="text-danger"></span>
                                        </div>
                                        <div class="mb-3">
                                            <label class="text-label form-label" style="color:black;">Ad Soyad</label>
                                            <input asp-for="AdSoyad" class="form-control border border-dark" type="text">
                                            <span asp-validation-for="AdSoyad" class="text-danger"></span>
                                        </div>
                                        <div class="mb-3">
                                            <label class="text-label form-label" style="color:black;">E Posta</label>
                                            <input asp-for="Eposta" class="form-control border border-dark" type="email" placeholder="email@example.com">
                                            <span asp-validation-for="Eposta" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-xl-6">
                                        <div class="mb-3">
                                            <label class="text-label form-label" style="color:black;">Telefon</label>
                                            <input asp-for="Telefon" class="form-control border border-dark" type="text" >
                                            <span asp-validation-for="Telefon" class="text-danger"></span>
                                        </div>                                      
                                        <div class="mb-3">
                                            <label class="text-label form-label" style="color:black;">Adres</label>
                                            <input asp-for="Adres" class="form-control border border-dark" type="text">
                                            <span asp-validation-for="Adres" class="text-danger"></span>
                                        </div>
                                       
                                    </div>
                                    <div class="d-flex justify-content-center mt-5">
                                        <button type="submit" class="btn me-2 btn-primary">Kaydet</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>              
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/admin/vendor/jquery-nice-select/js/jquery.nice-select.min.js"></script>
    <script src="~/admin/vendor/select2/js/select2.full.min.js"></script>
    <script src="~/admin/js/plugins-init/select2-init.js"></script>
}               